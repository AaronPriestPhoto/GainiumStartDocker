# =============================================================================
# GAINIUM DOCKER ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure with your actual values
# Never commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGO_DB_USERNAME=your_mongo_username
MONGO_DB_PASSWORD=your_mongo_password
MONGO_DB_NAME=gainium
MONGO_DB_PORT=27017
MONGO_DB_HOST=mongo

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_PASSWORD=your_redis_password
REDIS_HOST=redis

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================

RABBIT_USER=your_rabbit_user
RABBIT_PASSWORD=your_rabbit_password
RABBIT_HOST=rabbit

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================

# Coinbase Pro API Keys
COINBASEKEY=your_coinbase_api_key
COINBASESECRET=your_coinbase_secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:7500

# Server Configuration
SERVER_HOST=localhost
MAIN_SERVICE_HOST=localhost
BACKTEST_SERVICE_HOST=localhost

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# API and GraphQL
GRAPH_QL_PORT=4000

# WebSocket
WS_PORT=3001

# Frontend
PORT=7500

# Backtest Service
BACKTEST_PORT=3002

# =============================================================================
# SERVICE URLS
# =============================================================================

# Exchange Service
EXCHANGE_SERVICE_API_URL=http://exchange-connector:3000

# Paper Trading Service
PAPER_TRADING_API_URL=http://paper-trading:3000

# WebSocket URLs
PAPER_WS=ws://localhost:3001
NEXT_PUBLIC_SERVER=http://localhost:4000
NEXT_PUBLIC_WS=ws://localhost:3001

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Price Role (for price connector)
PRICEROLE=your_price_role

# Price Connector Exchanges
PRICE_CONNECTOR_EXCHANGES=coinbase

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. Generate strong, unique passwords for all database services
# 2. Use a secure JWT secret (at least 32 characters)
# 3. Keep your exchange API keys secure and never share them
# 4. Consider using different values for development vs production
# 5. Regularly rotate your API keys and secrets
#
# Example strong password generation:
# openssl rand -base64 32
#
# Example JWT secret generation:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
